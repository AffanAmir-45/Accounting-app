<!DOCTYPE html>
<html>
<head>
  <title>Debtor & Creditor Balance</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f8f9fa;
      padding: 20px;
    }
    h2 {
      text-align: center;
      margin-bottom: 30px;
    }
    table {
      background: white;
      border-radius: 10px;
      overflow: hidden;
    }
    a {
      text-decoration: none;
      color: #0d6efd;
      font-weight: bold;
    }
    a:hover {
      text-decoration: underline;
    }
    .total-row {
      font-weight: bold;
      background: #f1f1f1;
    }
  </style>
</head>
<body>

  <h2>Debtor & Creditor Balances</h2>

  <div class="row">
    <div class="col-md-6">
      <h4>Debtors</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Party Name</th>
            <th>Amount Owed</th>
          </tr>
        </thead>
        <tbody>
          <% let totalDebtors = 0; %>
          <% debtors.forEach(d => { totalDebtors += d.amount; %>
            <tr>
              <td><a href="/ledger/<%= encodeURIComponent(d.name) %>"><%= d.name %></a></td>
              <td><%= d.amount %></td>
            </tr>
          <% }) %>
          <tr class="total-row">
            <td>Total Debtors Owe</td>
            <td><%= totalDebtors %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-6">
      <h4>Creditors</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Party Name</th>
            <th>Amount Payable</th>
          </tr>
        </thead>
        <tbody>
          <% let totalCreditors = 0; %>
          <% creditors.forEach(c => { totalCreditors += c.amount; %>
            <tr>
              <td><a href="/ledger/<%= encodeURIComponent(c.name) %>"><%= c.name %></a></td>
              <td><%= c.amount %></td>
            </tr>
          <% }) %>
          <tr class="total-row">
            <td>Total Owed to Creditors</td>
            <td><%= totalCreditors %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>
