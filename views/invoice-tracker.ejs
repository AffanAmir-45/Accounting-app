<!DOCTYPE html>
<html>
<head>
  <title>Invoice Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light p-5">
<div class="container">
  <h2 class="mb-4">ðŸ§¾ All Invoices</h2>

  <form method="GET" action="/invoice-tracker" class="mb-3">
    <input type="text" name="search" placeholder="Search by party/item name" class="form-control" value="<%= search || '' %>">
  </form>

  <table class="table table-bordered bg-white">
    <thead class="table-dark">
      <tr>
        <th>ID</th><th>Date</th><th>Item</th><th>Qty</th><th>Rate</th><th>Amount</th><th>Type</th><th>Party</th>
      </tr>
    </thead>
    <tbody>
      <% invoices.forEach(inv => { %>
        <tr>
          <td><%= inv.id %></td>
          <td><%= inv.date %></td>
          <td><%= inv.item_name %></td>
          <td><%= inv.quantity %></td>
          <td><%= inv.rate %></td>
          <td><%= inv.amount %></td>
          <td><%= inv.type %></td>
          <td><%= inv.party_name || '' %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <a href="/" class="btn btn-secondary">â¬… Back</a>
</div>
</body>
</html>
