<!DOCTYPE html>
<html>
<head>
  <title><%= accountName %> - Ledger</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #eef2f3; padding: 20px; }
    h1 { text-align: center; margin-bottom: 10px; }
    h3 { text-align: center; margin-bottom: 30px; }
    .month-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 15px;
    }
    .month-card {
      background: white;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
      cursor: pointer;
      transition: transform 0.2s;
    }
    .month-card:hover {
      background: #f0f0f0;
      transform: translateY(-3px);
    }
  </style>
</head>
<body>

  <h1><%= year %></h1>
  <h3><%= accountName %> Ledger</h3>

  <div class="month-grid">
    <% months.forEach(m => { %>
      <div class="month-card" onclick="window.location.href='/ledger/<%= encodeURIComponent(accountName) %>/<%= m.month %>/<%= year %>'">
        <%= m.monthName %>
      </div>
    <% }) %>
  </div>

</body>
</html>
