<!DOCTYPE html>
<html>
<head>
  <title>Admin Invoices - SAFFAZ & CO</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">

  <h2 class="mb-4">üìÑ All Invoices</h2>

  <table class="table table-bordered table-sm">
    <thead>
      <tr>
        <th>Invoice No.</th>
        <th>Date</th>
        <th>Party Name</th>
        <th>Type</th>
        <th>Total Amount</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% invoices.forEach(inv => { %>
        <tr>
          <td><%= inv.invoice_number %></td>
          <td><%= inv.date %></td>
          <td><%= inv.party_name %></td>
          <td><%= inv.type.replace('_', ' ') %></td>
          <td><%= inv.total %> BDT</td>
          <td>
            <a href="/admin/invoice/<%= inv.id %>/edit" class="btn btn-sm btn-primary">‚úèÔ∏è Edit</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/admin" class="btn btn-secondary mt-3">‚Üê Back to Admin Panel</a>

</body>
</html>
